<div id="main-content">
@if (@User.Identity.IsAuthenticated)
{
    <p class="error" data-bind="text: error"></p>
    <input id="antiForgeryToken" type="hidden" value="@GetAntiForgeryToken()" />
    <button data-bind="click: addExpenseReport">Add Expense</button>
    
    <section id="expenseReportsList">
        <div id="Master" data-bind="template: { name: 'expenseReportsTmpl', foreach: expenseReports, visible: expenseReports().length > 0 }"></div>
    </section>
    
