@model Expenses.Web.Models.LoginModel
@{
    ViewBag.Title = "Expenses";
}
@functions{
    public string GetAntiForgeryToken()
    {
        string cookieToken, formToken;
        AntiForgery.GetTokens(null, out cookieToken, out formToken);
        return cookieToken + ":" + formToken;                
    }
}

<header>
    <h1>@ViewBag.Title</h1>
</header>


@*Templates*@
<script id="expenseReportsTmpl" type="text/html">       
    <article class="ExpenseReport">
        <header>
            <form data-bind="validate: true">
                <input class="required" data-bind="value: name, selected: selected, blurOnEnter: true" />
            </form>
        </header>

        <a href="#" class="deletelist" data-bind="click: $parent.deleteExpenseReport">X</a>          
            
        <p class="error" data-bind="visible: errorMessage, text: errorMessage"></p>
    </article>    
</script> 


